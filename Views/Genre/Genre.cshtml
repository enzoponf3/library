@{
}
@foreach (var g in ViewBag.Genres)
{
    <div class="genre-container">
            <div>
                <div class="author">
                    <h4>@g.Name</h4> <br>
                    <h5>@g.Description</h5>

                </div>
            </div>
            <div>
                <a asp-action="Edit" asp-route-id="@g.Id">Edit</a>
                <a asp-action="Delete" asp-route-id="@g.Id">Delete</a>
            </div>
    </div>
}
