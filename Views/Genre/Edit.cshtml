@model PonfeLibrary.Models.Genre

@{
}
<div class="edit-page">
    <h5 class="page-title">Editing Genre</h5>

    <div class="form-container">
        <form id="edit-form" asp-action="edit">
            <div asp-validation-summary="ModelOnly"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-input">
                <label asp-for="Name"></label>
                <input asp-for="Name" />
                <span asp-validation-for="Name"></span>
            </div>
            <div class="form-input">
                <label asp-for="Description"></label>
                <textarea onkeyup="auto_grow(this)" asp-for="Description"></textarea>
                <span asp-validation-for="Description"></span>
            </div>
            <div class="button-holder">
                <input type="submit" hidden />
                <a onclick="document.getElementById('edit-form').submit()">Save</a>
                <a asp-action="Show">Cancel</a>
            </div>
        </form>
    </div>
</div>