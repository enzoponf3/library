<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>PonfeLibrary</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
          rel="stylesheet">
    <link rel="stylesheet" href="~/style/normalize.css" />
    <link rel="stylesheet" href="~/style/style.css" />
    <link rel="stylesheet" href="~/style/containers.css" />
    <link rel="stylesheet" href="~/style/modal.css" />
</head>
<body>
    <header>
        <nav class="nav-container">
            <div class="title-container">
                <a class="" asp-area="" asp-controller="Book" asp-action="Show">PonfeLibrary</a>
            </div>
            <div class="items-container">
                <ul class="">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Book" asp-action="Show">Books</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Genre" asp-action="Show">Genres</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Publisher" asp-action="Show">Publishers</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Author" asp-action="Show">Authors</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div>
        <main role="main" class="">
            @RenderBody()
        </main>
        <div class="add-button">
            <a onclick="toggleModal('add-modal')">
                <span class="material-icons">
                    add
                </span>
            </a>
        </div>
        <div id="add-modal" class="modal">
            <div class="modal-content">
                <span>
                    Choose what do you want to add
                </span>
                <div >
                    <a class="add-item">
                        Book
                    </a>
                    <a class="add-item">
                        Genre
                    </a>
                    <a class="add-item">
                        Publisher
                    </a>
                    <a class="add-item">
                        Author
                    </a>
                </div>
                <div class="button-holder">
                    <a onclick="toggleModal('add-modal')">Cancel</a>
                </div>
            </div>
        </div>
    </div>
    <footer>
        <div class="container">
            2020   &copy;   Enzo Ponferrada
        </div>
    </footer>
    <script src="~/scripts/site.js"></script>
   <!--<script src="~/js/site.js" asp-append-version="true"></script>-->
    @RenderSection("Scripts", required: false)
</body>
</html>
